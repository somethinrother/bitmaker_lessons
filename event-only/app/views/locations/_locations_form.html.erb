<%= form_for location do |form_helper| %>

  <% form_item_array = [:name, :city, :description, :image,] %>

  <% form_item_array.each do |form_item| %>
    <p>
      <%= form_helper.label form_item %>
      <%= form_helper.text_field form_item %>
    </p>
  <% end %>

  <%= form_helper.submit %>

<% end %>
