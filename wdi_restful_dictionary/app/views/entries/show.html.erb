<h1><%= "#{@entry.title}" %></h1>

<%= link_to "Edit", edit_entry_path %>
|
<%= link_to "Delete", entry_path(@entry), method: :delete, data: {confirm:"Are you sure you'd like to delete this entry? It will be permanent."} %>

<h3>- Definition -</h3>

<p>Lang.: <%= @entry.language %></p>

<p>

  <% if @entry.definition[0] == "(" && @entry.definition[-1] != "." %>
    <% definition_array = @entry.definition.split(//) %>
    <% definition_array[1].upcase! %>
    <% new_def = definition_array.join('') %>
    <% new_def = new_def + "." %>
  <% elsif @entry.definition[0] == "(" %>
    <% definition_array = @entry.definition.split(//) %>
    <% definition_array[1].upcase! %>
    <% new_def = definition_array.join('') %>
    <% @entry.definition = new_def %>
  <% elsif @entry.definition[-1] != "." %>
    <% new_def = @entry.definition.capitalize + "." %>
  <% else %>
    <% new_def = @entry.definition.capitalize %>
  <% end %>

  <%= new_def %> 

</p>
