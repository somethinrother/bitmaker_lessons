<!DOCTYPE html>
<html>
<head>
  <title>Photogur</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <p class="userinfo">
    <% if current_user %>
      Current Account: <%= current_user.email %>. <%= link_to "Log Out?", session_path("current"), :method => :delete %>
    <% else %>
      <p>
        <%= link_to "New User?", new_users_path %>
        |
        <%= link_to "Log in", new_session_path %>
      </p>
    <% end %>
  </p>

  <%= yield %>

</body>
</html>
