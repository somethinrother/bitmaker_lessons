<h1>Welcome! Log in below, please</h1>
<%= link_to "Back", root_path %>

<%= form_tag session_path do %>

  <div class="field">
    <%= label_tag :email %><br/>
    <%= text_field_tag :email, params[:email] %>
  </div>

  <div class="field">
    <%= label_tag :password %><br/>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "LOG IN" %>
  </div>

<% end %>
